div
  = link_to '< Back', :back, class: 'link-back'
h2.photo-title
  | Photo created: "#{normalize_date(@data['created_at'])}"
section.photo.flex-container
  = image_tag(@data['urls']['regular'],alt: "Categories of photos: #{normalize_category(@data['categories'])}", class: 'img-photos')
  .photo-description
    .user-profile
      p
        ' User profile:
      .block
        = image_tag(@data['user']['profile_image']['medium'], alt: 'User avatar', class: 'user-avatar')
        .inline
          div
            span.user-username
              = @data['user']['username']
          div
            span.user-likes
            ' Has
            svg.likes-icon.likes-icon--profile
            = ': ' + @data['user']['likes'].to_s
    p
      ' Categories:
      = normalize_category (@data['categories'])
    .download-link
      = link_to 'download', download_photo_path(@data['id'])